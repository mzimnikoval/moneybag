<!DOCTYPE html>
<html lang="en">
<head>
	<!-- @css : assets/css/screen.min.css -->
	<!-- @title : Money Bag dashboard -->
	<!-- @import "kit/_head.kit" -->
</head>
<body>
    <!-- @active_auctions : active -->
    <!-- @import "kit/components/_admin-sidebar.kit" -->
    <main class="dashboard">
        <header class="main-content-header d-flex justify-content-between align-items-center px-11">
            <nav class="main-content-header__subpages-nav">
                <ul>
                    <li>
                        <a href="#" class="active"><span class="icon icon--back"></span></a>
                    </li>
                </ul>
            </nav>
            <aside class="main-content-header__user-area align-items-center d-none d-xl-flex">
                <div>
                    <!-- @import "kit/header/_alerts.kit" -->
                    <!-- @import "kit/header/_profile.kit" -->
                </div>
            </aside>
        </header>
        <section class="moje-financie mb-11">
            <div class="container-fluid">  
                <div class="row">
                    <div class="col-12 col-lg-7 order-2 order-lg-1">
                        <article class="dashboard__box dashboard__box--white d-block p-5 p-md-11 p-lg-9 p-xl-11 mb-5 mb-lg-0">
                            <h3 class="light">Informácie</h3>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Požadovaná výška pôžičky</p>
                                <p class="text--dark">14 500 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Splatnosť</p>
                                <p class="text--dark">24 Mesiacov</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Úroková sadzba</p>
                                <p class="text--dark">15,40% p.a.</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Využitie prostriedkov</p>
                                <p class="text--dark">Pôžička na čokoľvek</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between pt-4">
                                <p class="mb-1 mb-md-0">Aukcia končí</p>
                                <p class="text--dark">00:00 hod.</p>
                            </div>
                        </article>
                    </div>
                    <div class="col-12 col-lg-5 pl-2 pl-xxxl-5 order-1 order-lg-2">
                        <article class="dashboard__box dashboard__box--dark d-block p-5 p-md-11 p-lg-7 p-xxxl-9 mb-6 mb-lg-0 position-sticky">
                            <h3 class="text--light"><span class="text--white">13 400 €</span> / 14 500 €</h3>
                            <div class="grid-listing__item__progress-bar w-100"><span style="width:90%"></span></div>
                            <div class="d-flex justify-content-between border-bottom-white-15 py-4">
                                <p>Ostáva</p>
                                <p class="text--white">1 100 €</p>
                            </div>
                            <div class="d-flex justify-content-between border-bottom-white-15 py-4">
                                <p>Stav aukcie</p>
                                <p class="text--white"><span class="icon icon--check text-success mr-1"></span>Skončená</p>
                            </div>
                            <div class="d-flex justify-content-between py-4">
                                <p>Úroková sadzba</p>
                                <p class="text--white">12,40% p.a.</p>
                            </div>
                            <div class="alert alert-info"><span class="icon"></span><span class="text--white">Vyzbieralo sa 90% požadovanej sumy.</span></div>
                            <a href="" class="btn btn-block btn-primary mb-3">Čerpať úver</a>
                            <a href="" class="btn btn-block btn-outline-secondary">Zamietnuť úver</a>
                        </article>
                    </div>
                </div>          
            </div>
        </section>
        <!-- @import "kit/components/_admin-ponuky-investorov.kit" -->
    </main>

    <!-- @import "kit/_footer.kit" -->
</body>
</html>