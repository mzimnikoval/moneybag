    <main class="dashboard">
        <header class="main-content-header d-flex flex-column-reverse flex-xl-row justify-content-center justify-content-xl-between align-items-xl-center px-11">
            <nav class="main-content-header__subpages-nav">
                <ul>
                    <li>
                        <a href="ai-financie.html" class="active">Prehľad financií</a>
                    </li>
                    <li>
                        <a href="ai-financie-vklady.html">Vklady na účet</a>
                    </li>
                    <li>
                        <a href="ai-financie-vybery.html">Výbery z účtu</a>
                    </li>
                </ul>
            </nav>
            <aside class="main-content-header__user-area d-flex align-items-center">
