            </aside>
        </header>
        <!-- @import "kit/components/_admin-moje-financie-slim.kit" -->
        <section>
            <div class="container-fluid">
                <div class="row row-header mb-7">
                    <div class="col-12 col-md-6 d-flex align-items-center">
                        <h3 class="mb-3 mb-md-0 light">Prehľad financií</h3>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <a href="" class="btn btn-sm btn-primary mr-4">Vklad</a>
                        <a href="" class="btn btn-sm btn-outline-primary">Výber</a>
                    </div>
                </div>      
                <div class="row">
                    <div class="col-lg-6 pr-xl-5">
                        <article class="dashboard__box dashboard__box--white d-block p-5 p-lg-11 mb-5 mb-md-15">
                            <h4 class="light">Investičná výnosnosť</h4>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Investované celkom</p>
                                <p class="text--dark">16 200 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Investičný výnos (p.a.)</p>
                                <p class="text--dark">15%</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Inkasované splátky</p>
                                <p class="text--dark">800 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Inkasované úroky</p>
                                <p class="text--dark">120 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Inkasované sankčné poplatky</p>
                                <p class="text--dark">0 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between pt-4">
                                <p class="mb-1 mb-md-0">Očakávané zo splácaných</p>
                                <p class="text--dark">240 €</p>
                            </div>                            
                        </article>
                    </div>
                    <div class="col-lg-6 pl-xl-5">
                        <article class="dashboard__box dashboard__box--white d-block p-5 p-lg-11 mb-15">
                            <h4 class="light">Moje portfólio</h4>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Aktívne investície</p>
                                <p class="text--dark">16 200 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Ukončené investície</p>
                                <p class="text--dark">4 200 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-4">
                                <p class="mb-1 mb-md-0">Inkasované splátky</p>
                                <p class="text--dark">800 €<span class="ml-3">9%</span></p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between pt-4">
                                <p class="mb-1 mb-md-0">Splácané</p>
                                <p class="text--dark">120 €<span class="ml-3">12%</span></p>
                            </div>
                        </article>
                    </div>
