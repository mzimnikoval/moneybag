<div class="row justify-content-center">
    <div class="progress-bar">
        <div class="progress-bar__full">
            <span class="progress-bar__progress" style="width: 0"></span>
        </div>
    </div>
    <div class="col-12 col-xl-8">
        <div class="steps">
            <span class="steps__name">Krok </span><span class="steps__current">1</span><span class="steps__separator">/</span><span class="steps__count">6</span>
        </div>
        <h3>Osobné informácie</h3>
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="meno">Meno</label>
                    <input type="text" class="form-control" id="meno">
