<!DOCTYPE html>
<html lang="en">
<head>
	<!-- @css : assets/css/screen.min.css -->
	<!-- @title : Money Bag dashboard -->
	<!-- @import "kit/_head.kit" -->
</head>
<body>
    <!-- @active_finance : active -->
    <!-- @import "kit/components/_admin-sidebar.kit" -->
    <main class="dashboard">
        <header class="main-content-header d-flex flex-column-reverse flex-xl-row justify-content-center justify-content-xl-between align-items-xl-center px-11">
            <nav class="main-content-header__subpages-nav">
            </nav>
            <aside class="main-content-header__user-area align-items-center d-none d-xl-flex">
                <div>
                    <!-- @import "kit/header/_alerts.kit" -->
                    <!-- @import "kit/header/_profile.kit" -->
                </div>
            </aside>
        </header>
        <section>
            <div class="container-fluid">
                <div class="row row-header mb-7">
                    <div class="col-12 col-md-6 d-flex align-items-center">
                        <h3 class="mb-0 mb-md-0 light">Prehľad financií</h3>
                    </div>
                </div>      
                <div class="row">
                    <div class="col-lg-6 pr-xxl-5">
                        <article class="dashboard__box dashboard__box--white d-block p-5 p-xl-5 p-xxl-11 mb-5 mb-md-9">
                            <h4 class="light">Investičná výnosnosť</h4>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Investované celkom</p>
                                <p class="text--dark">16 200 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Investičný výnos (p.a.)</p>
                                <p class="text--dark">15%</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Inkasované splátky</p>
                                <p class="text--dark">800 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Inkasované úroky</p>
                                <p class="text--dark">120 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Inkasované sankčné poplatky</p>
                                <p class="text--dark">0 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between pt-2 pt-xxl-4">
                                <p class="mb-1 mb-md-0">Očakávané zo splácaných</p>
                                <p class="text--dark">240 €</p>
                            </div>                            
                        </article>
                    </div>
                    <div class="col-lg-6 pl-xxl-5">
                        <article class="dashboard__box dashboard__box--white d-block p-5 p-xl-5 p-xxl-11 mb-15">
                            <h4 class="light">Moje portfólio</h4>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Aktívne investície</p>
                                <p class="text--dark">16 200 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Ukončené investície</p>
                                <p class="text--dark">4 200 €</p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between border-bottom-light py-2 py-xxl-4">
                                <p class="mb-1 mb-md-0">Inkasované splátky</p>
                                <p class="text--dark">800 €<span class="ml-3 text--light">9%</span></p>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-between pt-2 pt-xxl-4">
                                <p class="mb-1 mb-md-0">Splácané</p>
                                <p class="text--dark">120 €<span class="ml-3 text--light">12%</span></p>
                            </div>
                        </article>
                    </div>
                </div>          
            </div>
        </section>
    </main>

    <!-- @import "kit/_footer.kit" -->
</body>
</html>